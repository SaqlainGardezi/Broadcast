doctype html
html
  head
    title Register Page
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
  body
    form(method='post', action='/index/register')
      .container(style='margin-top:20px;')
        .form-group
          label(for='emailInput') Email address
          input#emailInput.form-control(type='email', name='email', placeholder='Enter email')
          small#emailHelp.form-text.text-muted Enter Unique email
        .form-group
          label(for='nameInput') User Name
          input#nameInput.form-control(type='name', name='name', placeholder='Enter User Name')
          small#nameHelp.form-text.text-muted Public
        .form-group
          label(for='password', name='password') Password
          input#password.form-control(type='password', name='password', placeholder='Password')
        button.btn.btn-primary(type='submit') Submit
